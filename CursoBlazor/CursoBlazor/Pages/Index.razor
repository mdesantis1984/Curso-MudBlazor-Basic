@page "/"

<PageTitle>Index</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Hello, world!</MudText>
<MudText Class="mb-8">Welcome to your new app, powered by MudBlazor!</MudText>
<MudAlert Severity="Severity.Normal">You can find documentation and examples on our website here: <MudLink Href="https://mudblazor.com" Typo="Typo.body2" Color="Color.Inherit"><b>www.mudblazor.com</b></MudLink></MudAlert>


<MudGrid Class="my-3">
    <MudItem xs="12" sm="6" md="4">
        <MudTextField Class="ma-4" @bind-Value="Nombre" Immediate="true" Label="Nombre" Variant="Variant.Outlined"></MudTextField>
        <MudTextField Class="ma-4" @bind-Value="Apellido" Immediate="true" Label="Apellido" Variant="Variant.Outlined"></MudTextField>
        <MudTextField Class="ma-4" @bind-Value="Direccion" Immediate="true" Label="Dirección" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentColor="Color.Error" AdornmentIcon="@(Icons.Material.Filled.Streetview)"></MudTextField>
    </MudItem>

    @*<MudItem xs="12" sm="6" md="4">

        </MudItem>
        <MudItem xs="12" sm="6" md="4">

        </MudItem>*@

</MudGrid>


<MudGrid Class="my-3">
    <MudItem xs="12" sm="6" md="4">
        <MudAlert Class="ma-4" Elevation="4" Severity="Severity.Normal">The reactor type is RBMK-1000</MudAlert>
        <MudAlert Class="ma-4" Elevation="4" Severity="Severity.Info">The reactor was fired up successfully</MudAlert>
        <MudAlert Class="ma-4" Elevation="8" Severity="Severity.Success">The reactor is running at optimum temperature</MudAlert>
        <MudAlert Class="ma-4" Elevation="8" Severity="Severity.Warning">The reactor temperature exceeds the optimal range</MudAlert>
        <MudAlert Class="ma-4" Severity="Severity.Error">Meltdown is imminent</MudAlert>
    </MudItem>
</MudGrid>

<MudGrid Class="my-3">
    <MudItem xs="12" sm="6" md="4">
        <MudAlert Class="ma-4" Severity="Severity.Normal" Variant="Variant.Outlined">The reactor type is RBMK-1000</MudAlert>
        <MudAlert Class="ma-4" Severity="Severity.Info" Variant="Variant.Outlined">The reactor was fired up successfully</MudAlert>
        <MudAlert Class="ma-4" Severity="Severity.Success" Variant="Variant.Outlined">The reactor is running at optimum temperature</MudAlert>
        <MudAlert Class="ma-4" Severity="Severity.Warning" Variant="Variant.Outlined">The reactor temperature exceeds the optimal range</MudAlert>
        <MudAlert Class="ma-4" Severity="Severity.Error" Variant="Variant.Outlined">Meltdown is imminent</MudAlert>
    </MudItem>
</MudGrid>


  



@code {
    public string Nombre { get; set; } = string.Empty;
    public string Apellido { get; set; } = string.Empty;
    public string Direccion { get; set; } = string.Empty;
}
